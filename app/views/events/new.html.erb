<div class="container bg-dark pt-3 pb-3 rounded border border-secondary">
    <div class="row justify-content-center">
        <div class="col-10">
            <h2 class="font-weight-bold">Organize Event</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with model: @event, local: true do |f| %>
                <div class="form-group">
                    <%= f.label :name, "Event name" %>
                    <%= f.text_field :name, class: "form-control", required: true%>
                </div>
                <div class="form-group">
                    <%= f.label :description, "Event description"%>
                    <%= f.text_area :description, class: "form-control", required: true%>
                </div>

                <div class="form-group">
                    <%= f.label :time, "Event time" %>
                    <%= f.datetime_select :time, required: true%>
                </div>

                <%= f.submit "Organize", class: "btn btn-primary"%>
            <% end %>
        </div>
    </div>
</div>