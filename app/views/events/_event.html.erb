<div class="card bg-dark text-light border border-white">
    <div class="card-body">
        <h5 class="card-title font-weight-bold"><%= event.name %></h5>
        <p class="card-subtitle"<%= event.creator %>></p>
        <p class="card-text"><%= event.description %></p>
    </div>
    <div class="card-footer text-muted"><%= event.time.to_formatted_s(:long_ordinal) %></div>
</div>
    